{
    "document": {
        "type": "APL",
        "version": "1.0",
        "theme": "dark",
        "import": [
            {
                "name": "alexa-layouts",
                "version": "1.0.0"
            }
        ],
        "resources": [
            {
                "description": "Stock color for the light theme",
                "colors": {
                    "colorTextPrimary": "#151920"
                }
            },
            {
                "description": "Stock color for the dark theme",
                "when": "${viewport.theme == 'dark'}",
                "colors": {
                    "colorTextPrimary": "#f0f1ef"
                }
            },
            {
                "description": "Standard font sizes",
                "dimensions": {
                    "textSizeBody": 48,
                    "textSizePrimary": 27,
                    "textSizeSecondary": 23,
                    "textSizeSecondaryHint": 25
                }
            },
            {
                "description": "Common spacing values",
                "dimensions": {
                    "spacingThin": 6,
                    "spacingSmall": 12,
                    "spacingMedium": 24,
                    "spacingLarge": 48,
                    "spacingExtraLarge": 72
                }
            },
            {
                "description": "Common margins and padding",
                "dimensions": {
                    "marginTop": 40,
                    "marginLeft": 60,
                    "marginRight": 60,
                    "marginBottom": 40
                }
            }
        ],
        "styles": {
            "textStyleBase": {
                "description": "Base font description; set color and core font family",
                "values": [
                    {
                        "color": "@colorTextPrimary",
                        "fontFamily": "Amazon Ember"
                    }
                ]
            },
            "textStyleBase0": {
                "description": "Thin version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "100"
                }
            },
            "textStyleBase1": {
                "description": "Light version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "300"
                }
            },
            "mixinBody": {
                "values": {
                    "fontSize": "@textSizeBody"
                }
            },
            "mixinPrimary": {
                "values": {
                    "fontSize": "@textSizePrimary"
                }
            },
            "mixinSecondary": {
                "values": {
                    "fontSize": "@textSizeSecondary"
                }
            },
            "textStylePrimary": {
                "extend": [
                    "textStyleBase1",
                    "mixinPrimary"
                ]
            },
            "textStyleSecondary": {
                "extend": [
                    "textStyleBase0",
                    "mixinSecondary"
                ]
            },
            "textStyleBody": {
                "extend": [
                    "textStyleBase1",
                    "mixinBody"
                ]
            },
            "textStyleSecondaryHint": {
                "values": {
                    "fontFamily": "Bookerly",
                    "fontStyle": "italic",
                    "fontSize": "@textSizeSecondaryHint",
                    "color": "@colorTextPrimary"
                }
            }
        },
        "layouts": {},
        "mainTemplate": {
            "parameters": [
                "datasource"
            ],
            "items": [
                {
                    "when": "${viewport.shape == 'round'}",
                    "type": "Container",
                    "alignItems": "center",
                    "paddingTop": "10vh",
                    "direction": "column",
                    "items": [
                        {
                            "type": "Image",
                            "width": "70vw",
                            "height": "70vh",
                            "source": "${datasource.displayData.properties.chartURL}",
                            "scale": "best-fill",
                            "align": "center"
                        },
                        {
                            "type": "Text",
                            "text": "Last Close: ${datasource.displayData.properties.summary.today.display}",
                            "align": "center",
                            "fontSize": "25dp"
                        },
                        {
                            "type": "Text",
                            "text": "1 Day: ${datasource.displayData.properties.summary.yesterday.display}",
                            "align": "center",
                            "fontSize": "25dp"
                        }
                    ]
                },
                {
                    "when": "${viewport.shape != 'round'}",
                    "type": "Container",
                    "alignItems": "left",
                    "direction": "row",
                    "paddingLeft": "1vw",
                    "items": [
                        {
                            "type": "Image",
                            "width": "53vw",
                            "height": "95vh",
                            "source": "${datasource.displayData.properties.chartURL}",
                            "scale": "best-fill",
                            "align": "center"
                        },
                        {
                            "type": "Container",
                            "direction": "column",
                            "paddingTop": "20vh",
                            "alignItems": "left",
                            "items": [
                                {
                                    "type": "Text",
                                    "text": "Last Close:",
                                    "align": "center",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "1 Day:",
                                    "align": "center",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "30 Day:",
                                    "align": "center",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "365 Day:",
                                    "align": "center",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "Max Close:",
                                    "align": "center",
                                    "fontSize": "30dp"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "direction": "column",
                            "paddingTop": "20vh",
                            "paddingLeft": "1vw",
                            "alignItems": "right",
                            "items": [
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.today.display}",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.yesterday.display}",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.month.display}",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.year.display}",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.max.display}",
                                    "align": "right",
                                    "fontSize": "30dp"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "direction": "column",
                            "paddingTop": "20vh",
                            "paddingLeft": "1vw",
                            "alignItems": "right",
                            "items": [
                                {
                                    "type": "Text",
                                    "text": " ",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "X",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "X",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "X",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "X",
                                    "align": "right",
                                    "fontSize": "30dp"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "direction": "column",
                            "paddingTop": "20vh",
                            "paddingLeft": "1vw",
                            "alignItems": "right",
                            "items": [
                                {
                                    "type": "Text",
                                    "text": " ",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.yesterday.diffs.show}%",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.month.diffs.show}%",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.year.diffs.show}%",
                                    "align": "right",
                                    "fontSize": "30dp"
                                },
                                {
                                    "type": "Text",
                                    "text": "${datasource.displayData.properties.summary.max.diffs.show}%",
                                    "align": "right",
                                    "fontSize": "30dp"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "dataSources": {
        "displayData": {
            "type": "object",
            "properties": {
                "chartURL": "https://s3.amazonaws.com/index-investor/charts/sp500_close_2019-01-14.png",
                "summary": {"today":{"period":"today","date":"2019-01-15","value":2610.3,"metric":"sp500_close","diffs":{"diff":0,"diffPct":"0.00","card":"+0.00","speak":0,"show":0},"display":"2610.30"},"yesterday":{"period":"yesterday","date":"2019-01-14","value":2582.6101,"metric":"sp500_close","diffs":{"diff":0.010721672621043458,"diffPct":"1.07","card":"+1.07","speak":1.07,"show":1.07},"display":"2582.61"},"month":{"period":"month","date":"2018-12-14","value":2600.71,"metric":"sp500_close","diffs":{"diff":0.003687454579710981,"diffPct":"0.37","card":"+0.37","speak":0.37,"show":0.37},"display":"2600.71"},"year":{"period":"year","date":"2018-01-12","value":2786.24,"metric":"sp500_close","diffs":{"diff":-0.06314603192833339,"diffPct":"-6.31","card":"-6.31","speak":6.31,"show":6.31},"display":"2786.24"},"max":{"period":"max","date":"2018-09-20","value":2930.75,"metric":"sp500_close","diffs":{"diff":-0.10934061247121038,"diffPct":"-10.93","card":"-10.93","speak":10.93,"show":10.93},"display":"2930.75"}}
            }
        }
    }
}